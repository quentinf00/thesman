	author = {Tandeo, Pierre and Ailliot, Pierre and Ruiz, Juan and Hannart, Alexis and Chapron, Bertrand and Cuzol, Anne and Monbet, Val{\'e}rie and Easton, Robert and Fablet, Ronan},
	booktitle = {Machine Learning and Data Mining Approaches to Climate Science},
