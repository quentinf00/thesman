	keywords = {Plug-and-play image restoration, Deep unfolding, Image denoising, Image deblurring, Image superresolution, Half quadratic splitting algorithm},
	pages = {481-509},
	publisher = {Academic Press},
	series = {Computer Vision and Pattern Recognition},
	title = {Chapter 14 - Deep plug-and-play and deep unfolding methods for image restoration},
	url = {https://www.sciencedirect.com/science/article/pii/B9780128221099000230},
