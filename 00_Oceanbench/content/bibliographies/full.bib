	keywords = {ocean dynamics, mesoscale eddies, deep learning, satellite altimetry, sea surface temperature, sea surface height},
	note = {e2022MS003589 2022MS003589},
	number = {5},
	pages = {e2022MS003589},
	title = {Synthesizing Sea Surface Temperature and Satellite Altimetry Observations Using Deep Learning Improves the Accuracy and Resolution of Gridded Sea Surface Height Anomalies},
	url = {https://agupubs.onlinelibrary.wiley.com/doi/abs/10.1029/2022MS003589},
